{
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": {
          "node": "current"
        }
      }
    ],
    "@babel/preset-typescript"
  ],
  "plugins": [
    [
      "module-resolver",
      {
        "alias": {
          "@config": "./src/config",
          "@models": "./src/models",
          "@middlewares": "./src/middlewares",
          "@controllers": "./src/controllers",
          "@views": "./src/views"
        }
      }
    ]
  ],
  "ignore": ["**/*.spec.ts"]
}
